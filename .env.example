# Server Configuration
PORT=3000
ACCESS_CODE=WINTER2025
ADMIN_PASSWORD=your_admin_password_here
REQUIRE_ACCESS_CODE=true

# Gallery Selection
MAX_PHOTO_SELECTION=50

# Email Configuration (for zip download delivery)
# Option 1: Resend API (Recommended for DigitalOcean - bypasses port blocking)
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=noreply@yourdomain.com

# Option 2: SMTP (if RESEND_API_KEY is not set)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# PostgreSQL Database Configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=wedding_photos

# AWS S3 Configuration (or DigitalOcean Spaces)
S3_ACCESS_KEY_ID=your_access_key_here
S3_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=your_bucket_name
S3_REGION=us-east-1

# For DigitalOcean Spaces (optional)
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

# For AWS S3, leave S3_ENDPOINT commented out
